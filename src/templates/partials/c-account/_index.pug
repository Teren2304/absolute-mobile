include ../cb-tab/_index
include ../cb-message/_index
include ../cb-account-popup/_index

mixin c-account(view)
  .c-account&attributes(attributes)
    .c-account__wrap
      if (view === 1)
        +c-account-form-1
      else if (view === 2)
        +c-account-form-2
      else if (view === 3)
        +c-account-form-3
      else if (view === 4)
        +c-account-form-4
      else if (view === 5)
        +c-account-form-5
      else if (view === 6)
        +c-account-form-6

