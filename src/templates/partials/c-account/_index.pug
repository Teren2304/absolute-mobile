mixin c-account-form-4
    .c-account__title Password requirements
    .c-account__ul
      .c-account__li
        p.c-account__text Must contain uppercase characters
        p.c-account__text.c-account__text--grey Must contain uppercase characters
      .c-account__li
        p.c-account__text Must contain lowercase characters
        p.c-account__text.c-account__text--grey The password must contain at least one uppercase character
      .c-account__li
        p.c-account__text Must contain numbers
        p.c-account__text.c-account__text--grey the password must contain at least one numeric character. Numeric characters are 1 2 3 4 5 6 7 8 9 0
      .c-account__li
        p.c-account__text Must contain a special character
        p.c-account__text.c-account__text--grey The password must contain at least one special character. Supported special characters:! @ # $% ^ & * () - _ = + \ | [] {}; : /? . > <
    .c-account__block
      input(type="text").c-account__field
      .c-account__show
      p.c-account__subtitle Current password*
    .c-account__block.c-account__block--focus
      input(type="text" value="GeO3it$LNWcX").c-account__field
      .c-account__show.c-account__show--active
      p.c-account__subtitle New password
    .c-account__block
      input(type="text").c-account__field
      .c-account__show
      p.c-account__subtitle Confirm new password
    .c-account__block
      button.c-account__btn
        span Save


mixin c-account-form-5
    .c-account__title-group
      p.c-account__text Here you can upload color photographs of documents (document scans are not allowed).
      p.c-account__text.c-account__text--grey Document pages should be fully visible. Valid document languages ​​are Russian, English, Ukrainian. After checking the documents, your game account will have the status "verified".
    +cb-tab
    +cb-message("Confirmed!").cb-message--success
    +cb-message("Bad document!").cb-message--bad
    +cb-message("Oops...Rejected").cb-message--warning

    .c-account__title-group
      p.c-account__text Your documents are pending. It can take some time.
      p.c-account__text.c-account__text--grey For any questions, please contact
        a(href="#").c-account__link support
    +cb-message("Under consideration…").cb-message--default
    +cb-message("Under consideration…").cb-message--default
    +cb-message("Under consideration…").cb-message--default
    +cb-message-2.cb-message--uploading
    +cb-message-3.cb-message--default
    +cb-message-4.cb-message--default
    button.c-account__btn
      span Save
    +cb-account-popup


mixin c-account-form-6
    .c-account__title-group.c-account__title-group--middle
      p.c-account__text.c-account__text--md.c-account__text--green Congratulations.
      p.c-account__text.c-account__text--grey You have passed verification
