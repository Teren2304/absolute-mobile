include ../ipn-competition/_index

mixin ipn-event
  .ipn-event&attributes(attributes)
    .ipn-event__header
      .ipn-event__back
        svg(width='100%' height='100%' viewBox='0 0 6 10' fill='none' xmlns='http://www.w3.org/2000/svg')
          path(d='M5 9L1 5L5 1' stroke='#9A9B9F')
      .ipn-event__info
        .ipn-event__teams
          p.ipn-event__team Manchester United
          p.ipn-event__text vs
          p.ipn-event__team Fatih Karagumruk SK
        .ipn-event__icon
          svg(width='100%' height='100%' viewBox='0 0 10 6' fill='none' xmlns='http://www.w3.org/2000/svg')
            path(d='M1 1L5 5L9 1' stroke='#9A9B9F')
      .ipn-event__favourite
        svg(width='14' height='14' viewBox='0 0 14 14' fill='none' xmlns='http://www.w3.org/2000/svg')
          path(d='M7.23267 10.5978L7 10.4755L6.76733 10.5978L3.33783 12.4008L3.9928 8.58198L4.03724 8.3229L3.84901 8.13941L1.07448 5.43492L4.90878 4.87776L5.16891 4.83996L5.28525 4.60424L7 1.12978L8.71475 4.60424L8.83109 4.83996L9.09122 4.87776L12.9255 5.43492L10.151 8.13941L9.96276 8.3229L10.0072 8.58198L10.6622 12.4008L7.23267 10.5978Z' stroke='#F1CB62')
    .ipn-event__body
      +ipn-competition(true, true)
      -var n = 0
      while (n < 10)
        +ipn-competition(data=n++)
