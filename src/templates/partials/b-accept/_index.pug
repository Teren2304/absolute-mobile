              .b-accept__cell.b-accept__cell--sm
                p.b-accept__odds.b-accept__odds--down 1.34
                input(type="number" placeholder="Stake").b-accept__field
            .b-accept__bottom
              p.b-accept__label Possible win:
              p.b-accept__label 243.00 USD

          .b-accept__bet
            .b-accept__wrap
