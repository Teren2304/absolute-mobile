        a.b-accept__edit Done

      .b-accept__body

        .b-accept__bets
          .b-accept__bet
            .b-accept__wrap
              .b-accept__cell
                p.b-accept__title Queen of South Reserves
                p.b-accept__market.b-accept__market--blue Fulltime Result
                p.b-accept__teams Chennaiyin FC v Hyderabad FC
              .b-accept__cell.b-accept__cell--sm
                p.b-accept__odds 1.34
                input(type="number" placeholder="Stake").b-accept__field
            .b-accept__bottom
              p.b-accept__label Possible win:
              p.b-accept__label 243.00 USD

          .b-accept__bet
            .b-accept__wrap
              .b-accept__cell
                p.b-accept__title Queen of South Reserves
