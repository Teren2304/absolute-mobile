mixin q-popup-help
  .q-popup__help
    p.q-popup__text Need some help?
      a(href="#").q-popup__link Support

mixin q-popup-agree
  .q-popup__agree
    input(type="checkbox" id="years").q-popup__checkbox
    label(for="years").q-popup__text I am 18 years old. I agree to the
      a(href="#").q-popup__link terms
      | and
      a(href="#").q-popup__text conditions
      | of the site

mixin q-popup-newsletter
  .q-popup__newsletter
    input(type="checkbox" id="newsletter").q-popup__checkbox
    label(for="newsletter").q-popup__text I agree to the newsletter

mixin q-popup-title(text)
  .q-popup__title= text


