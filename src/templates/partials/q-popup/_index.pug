mixin q-popup-1
  .q-popup&attributes(attributes)
    +q-popup-close
    .q-popup__wrapper

      .q-popup__body
        .q-popup__logo
          img(src="/img/logo/logo_placeholder.svg")
          img(src="/img/logo/logo_text.svg")

      .q-popup__footer
        .q-popup__action
          button.q-popup__btn.q-popup__btn--outline
            span Log In
          button.q-popup__btn.q-popup__btn--blue
            span Register
        +q-popup-help


mixin q-popup-2
  .q-popup&attributes(attributes)
    +q-popup-close
    .q-popup__wrapper
      +q-popup-title('Registration')

      .q-popup__body
        .q-popup__wrap
          input(type="email" placeholder="E-mail*").q-popup__field
        .q-popup__wrap
          input(type="password" placeholder="Password*").q-popup__field
          +q-popup-show-password
          p.q-popup__text.q-popup__text--10.q-popup__text--alpha Password must be at least 6 characters long. A strong password must contain uppercase and lowercase letters, numbers and symbols

      .q-popup__footer
        +q-popup-agree
        +q-popup-newsletter
        .q-popup__action
          button.q-popup__btn.q-popup__btn--blue
            span Registration
        +q-popup-help


mixin q-popup-3
  .q-popup&attributes(attributes)
    +q-popup-close
    .q-popup__wrapper
      +q-popup-title('Create a password')

      .q-popup__body
        .q-popup__wrap
          .q-popup__password
            input(type="number").q-popup__field
            input(type="number").q-popup__field
            input(type="number").q-popup__field
            input(type="number").q-popup__field

        .q-popup__fingerprint
           p.q-popup__text Use fingerprint
           label.q-popup__toggle
             input(type="checkbox" id="fingerprint").q-popup__toggle-input
             span.q-popup__toggle-swipe
             span.q-popup__toggle-bg


mixin q-popup-4
  .q-popup&attributes(attributes)
    +q-popup-close
    .q-popup__wrapper
      +q-popup-title('Log In')

      .q-popup__body
        .q-popup__wrap
          input(type="email" placeholder="E-mail*").q-popup__field
        .q-popup__wrap
          .relative
            input(type="password" placeholder="Password*").q-popup__field
            +q-popup-show-password

      .q-popup__footer
        a(href="#").q-popup__link Forgot your login password?
        .q-popup__action
          button.q-popup__btn.q-popup__btn--blue
            span Log In
        +q-popup-help
