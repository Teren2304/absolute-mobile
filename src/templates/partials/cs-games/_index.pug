include ../cs-game/_index

include ../cs-provider/_index
include ../cs-category/_index
include ../cs-game-rtp/_index
include ../cs-game-banner/_index

mixin cs-games
  .cs-games&attributes(attributes)
    .cs-games__block
      .cs-games__headline
        .cs-games__icon
          svg(width='100%', height='100%', viewBox='0 0 16 16', fill='none', xmlns='http://www.w3.org/2000/svg')
            path(opacity='0.5', d='M8.23267 12.1749L8 12.0526L7.76733 12.1749L3.71979 14.3028L4.4928 9.79585L4.53724 9.53677L4.349 9.35329L1.07448 6.16143L5.59976 5.50387L5.8599 5.46607L5.97623 5.23035L8 1.12977L10.0238 5.23035L10.1401 5.46607L10.4002 5.50387L14.9255 6.16143L11.651 9.35329L11.4628 9.53677L11.5072 9.79585L12.2802 14.3028L8.23267 12.1749Z', stroke='white')
        p.cs-games__text New game
        button.cs-games__button View all
      .cs-games__list
        -var n = 0
        while (n < 10)
          .cs-games__slide
            +cs-game(n++).cs-game--lg

    .cs-games__block
      .cs-games__headline
        p.cs-games__text Game categories
        a(href="pages/casino/categories/index.html").cs-games__button View all
      .cs-games__list
         .cs-games__slide
           +cs-category('Roulettes').cs-category--sm.cs-category--roulettes
         .cs-games__slide
           +cs-category('Slots').cs-category--sm.cs-category--slots
         .cs-games__slide
           +cs-category('Bingo').cs-category--sm.cs-category--bingo
         .cs-games__slide
           +cs-category('BTC Games').cs-category--sm.cs-category--btc
         .cs-games__slide
           +cs-category('Table Games').cs-category--sm.cs-category--table
         .cs-games__slide
           +cs-category('BlackJacks').cs-category--sm.cs-category--blackjacks

    .cs-games__block
      .cs-games__headline
        p.cs-games__text The best board game
        a(href="pages/casino/best-games/index.html").cs-games__button View all
      .cs-games__list
        -var n = 0
        while (n < 10)
          .cs-games__slide
            +cs-game(n++).cs-game--board.cs-game--sm

    .cs-games__block
      .cs-games__headline
        p.cs-games__text Games with active RTP
        a(href="pages/casino/rtp-games/index.html").cs-games__button View all
      .cs-games__list
        .cs-games__slide
          +cs-game-rtp.cs-game-rtp--sm
          +cs-game-rtp.cs-game-rtp--sm
        .cs-games__slide
          +cs-game-rtp.cs-game-rtp--sm
          +cs-game-rtp.cs-game-rtp--sm
        .cs-games__slide
          +cs-game-rtp.cs-game-rtp--sm
          +cs-game-rtp.cs-game-rtp--sm
        .cs-games__slide
          +cs-game-rtp.cs-game-rtp--sm
          +cs-game-rtp.cs-game-rtp--sm

    .cs-games__block
      .cs-games__headline
        p.cs-games__text Category
        button.cs-games__button View all
      .cs-games__list
        -var n = 0
        while (n < 10)
          .cs-games__slide
            +cs-game-banner('Pocker')(data=n++)

    .cs-games__block
      .cs-games__headline
        p.cs-games__text Popular casino rooms
        button.cs-games__button View all
      .cs-games__list
        -var n = 0
        while (n < 10)
          .cs-games__slide
            +cs-game(n++).cs-game--board.cs-game--sm

    .cs-games__block
      .cs-games__headline
        p.cs-games__text Game providers
        a(href="pages/casino/providers-games/index.html").cs-games__button View all
      .cs-games__list
        -var n = 0
        while (n < 10)
          .cs-games__slide
            +cs-provider.cs-provider--sm(data=n++)
